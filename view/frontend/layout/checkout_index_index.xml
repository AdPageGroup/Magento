<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="Tagging_GTM.data-layer">
            <arguments>
                <argument name="data_layer_processors" xsi:type="array">
                    <item name="checkout" xsi:type="object">Tagging\GTM\DataLayer\Processor\Checkout</item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceBlock name="checkout.root">
            <arguments>
                <argument name="jsLayout" xsi:type="array">
                    <item name="components" xsi:type="array">
                        <item name="checkout" xsi:type="array">
                            <item name="children" xsi:type="array">
                                <item name="steps" xsi:type="array">
                                    <item name="children" xsi:type="array">
                                        <item name="billing-step" xsi:type="array">
                                            <item name="children" xsi:type="array">
                                                <item name="payment" xsi:type="array">
                                                    <item name="children" xsi:type="array">
                                                        <item name="additional-payment-validators" xsi:type="array">
                                                            <item name="children" xsi:type="array">
                                                                <item name="yireo-googletagmanager2" xsi:type="array">
                                                                    <item name="component" xsi:type="string">
                                                                        Tagging_GTM/js/checkout/payment-validator/register
                                                                    </item>
                                                                </item>
                                                            </item>
                                                        </item>
                                                    </item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="Tagging_GTM.data-layer.container">
            <block
                name="Tagging_GTM.script-begin-checkout"
                template="Tagging_GTM::luma/script-begin-checkout.phtml"
                ifconfig="GTM/settings/enabled"
                after="Tagging_GTM.data-layer"
            >
                <arguments>
                    <argument name="begin_checkout_event" xsi:type="object">Tagging\GTM\DataLayer\Event\BeginCheckout</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
